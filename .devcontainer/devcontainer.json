{
    "name": "${localEnv:PROJECT_NAME:ai-voice-agent-bi4all}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "ENV_NAME": "${localEnv:PROJECT_NAME:ai-voice-agent-bi4all}",
            "PYTHON_VER": "${localEnv:PYTHON_VER:3.10}"
        }
    },
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
                "python.selectInterpreter": "/workspace/.venv/bin/python"
            },
            "extensions": [
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-python.python",
                "github.vscode-github-actions"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "PYTHONPATH": "/workspace"
    }, 
    "postCreateCommand": "bash -c 'python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt'"
}